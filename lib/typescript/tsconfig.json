{
  "compilerOptions": {
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "jsx": "react",
    "noImplicitAny": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "skipLibCheck": true,
    "checkJs": false,
    "noStrictGenericChecks": true,
    "isolatedModules": true
  }
}
